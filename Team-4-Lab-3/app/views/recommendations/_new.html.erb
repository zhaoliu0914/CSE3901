<div class="modal fade" tabindex="-1" role="dialog" id="addRecommendationModal">
  <% @recommendation = Recommendation.new %>
  <%= form_with model: @recommendation, local: true, url: user_recommendations_path(current_user.id), method: :post do |form| %>
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <h1 class="fw-bold mb-0 fs-2">New Recommendation</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-5 pt-0">
          <label for="basic-form-input" class="form-label">Course catalog number:</label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon3">CSE </span>
            <input type="text" id="basic-form-input" class="form-control" aria-describedby="basic-addon3" name="recommendation[course_catalog_number]" required>
          </div>
          <div class="mb-3">
            <%= form.label :section_class_number %>:
            <%= form.text_field :section_class_number, class: "form-control rounded-3", :required => 'required' %>
          </div>
          <div class="mb-3">
            <%= form.label :student_first_name %>:
            <%= form.text_field :student_first_name, class: "form-control rounded-3", :required => 'required' %>
          </div>
          <div class="mb-3">
            <%= form.label :student_last_name %>:
            <%= form.text_field :student_last_name, class: "form-control rounded-3", :required => 'required' %>
          </div>
          <div class="mb-3">
            <%= form.label :student_email %>:
            <%= form.text_field :student_email, class: "form-control rounded-3", :required => 'required' %>
          </div>
          <div class="mb-3">
            <%= form.label :desc %>:
            <%= form.text_field :desc, class: "form-control rounded-3" %>
          </div>

          <%= form.hidden_field :instructor_id, value: current_user.id %>
          <%= form.hidden_field :currentPageNumber, value: pageNumber %>

          <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Create</button>

          <small class="text-body-secondary">All fields are required to input data.</small>
          <hr class="my-4">

        </div>
      </div>
    </div>
  <% end %>
</div>
