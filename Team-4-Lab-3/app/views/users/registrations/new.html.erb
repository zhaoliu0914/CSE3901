<main>
  <div class="row g-5">
    <div class="col-md-7 col-lg-8">
      <div class="row g-3">

        <h2 class="h2 mb-3 fw-normal">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="col-12">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "lastname.{digit}@osu.edu" %>
          </div>

          <div class="col-12">
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="col-12">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
          </div>

          <div class="col-sm-6">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
          </div>

          <div class="my-3">
            Role
            <div class="form-check">
              <%= f.radio_button :role, "student", class: "form-check-input" %>
              <%= f.label :role, "Student", value: "student", class: "form-check-label" %>
            </div>

            <div class="form-check">
              <%= f.radio_button :role, "instructor_waiting", class: "form-check-input" %>
              <%= f.label :role, "Instructor", value: "instructor_waiting", class: "form-check-label" %>
            </div>

            <div class="form-check">
              <%= f.radio_button :role, "admin_waiting", class: "form-check-input" %>
              <%= f.label :role, "Admin", value: "admin_waiting", class: "form-check-label" %>
            </div>

          </div>

          <hr class="my-4">

          <div class="actions">
            <%= f.submit "Sign up", class: "w-100 btn btn-primary btn-lg" %>
            <br/>
          </div>
        <% end %>

        <%= button_to "Log in", new_session_path(resource_name), class: "btn btn-secondary" %>
        <br/>
        <br/>
        <br/>
      </div>
    </div>
  </div>
</main>